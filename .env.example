CLIENT_ID="your_xero_client_id_here"
CLIENT_SECRET="your_xero_client_secret_here"
REDIRECT_URI="https://127.0.0.1:8000/callback"
XERO_API_URL="https://api.xero.com"
STRIPE_API_KEY="sk_test_your_test_key_here"

# Assistant Configuration
# Set to "openai" or "llama32" to choose the assistant model
ASSISTANT_MODEL_TYPE=openai
USE_LLAMA32=false

# OpenAI Configuration (required if ASSISTANT_MODEL_TYPE=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Llama 3.2 Configuration (required if ASSISTANT_MODEL_TYPE=llama32)
LLAMA_BASE_URL=http://localhost:11434/v1
LLAMA_MODEL=llama3.2

# Email Configuration (for alerts and notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
