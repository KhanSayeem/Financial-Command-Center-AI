# Copy to .env (do not commit real secrets)

# Flask
FLASK_SECRET_KEY=replace_with_random_long_secret

# App server mode flags (TLS is terminated by nginx reverse proxy)
FORCE_HTTPS=false
ALLOW_HTTP=true

# Optional integrations (can be configured via web setup wizard)
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=
STRIPE_API_KEY=
STRIPE_PUBLISHABLE_KEY=
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# SSL certificate manager settings
CERT_VALIDITY_DAYS=365
CERT_ORGANIZATION=Financial Command Center AI
CERT_COUNTRY=US
CERT_HOSTNAMES=localhost,127.0.0.1,::1,financial-command-center

# Security limits
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_API_KEY_AUTH=true
